	switch (currentCultureName)
	{
		case "fa":
		case "ar":
		{
			Layout =
				"Layouts/Rtl/_Layout";

			break;
		}

		default:
		{
			Layout =
				"Layouts/Ltr/_Layout";

			break;
		}
	}
}
